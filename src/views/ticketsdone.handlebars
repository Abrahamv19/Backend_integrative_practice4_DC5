<div class='container login'>
  <div class='card col-10 cardsBorder'>
    <div class='centered-div home-title'>
      <h2>COMPRA REALIZADA CON EXITO</h2>
    </div>
    <div class='card-body'>
      <h5 class='card-title'>Ticket / Orden</h5>
      <div class>
        <div class='cardsBorder-dashboard col-4'>

          {{#each ticket}}
            <div class='card-body'>
              <p class='card-text'> {{product.title}} </p>
              <p class='card-text'>Cantidad: {{quantity}} </p>
            </div>
          {{/each}}
          <p class='card-text'><b>TOTAL</b> ${{totalCart}}</p>
        </div>
      </div>
    </div>
    <a class='averageButton button is-primary mt-3' href='/products'>Volver</a>
  </div>
</div>